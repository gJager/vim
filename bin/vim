from pathlib import Path

MYPATH = Path(__file__).resolve()
BIN = Path(MYPATH.parent).resolve()
INIT_LUA = Path(MYPATH.parent, '../lua/init.lua')

# Look for nvim
# Check nvim version
# Check for neovim-remote
# Node is needed for pyright
# Check for pyright
# Check for clangd
# check for ripgrep

# Print details

# Start nvim
print('Ready to start')
input()
posh.env.add_path(BIN)
posh.nvim('-u', INIT_LUA, *sys.argv[1:]) # pyright: ignore
